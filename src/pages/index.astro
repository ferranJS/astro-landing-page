---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Section1 from "../components/Section1.astro";
import Section2 from "../components/Section2.astro";
import Section3 from "../components/Section3.astro";
import Section4 from "../components/Section4.astro";
import Section5 from "../components/Section5.astro";
import Section6 from "../components/Section6.astro";
---

<Layout title="Tasle">
  <Header />
  <main class="h-screen w-screen snap-y snap-mandatory overflow-x-hidden">
    <Section1 />
    <Section2 />
    <Section3 />
    <Section4 />
    <Section5 />
    <Section6 />
  </main>
</Layout>

<style>
  .first-load-h2 {
    animation: first-load-h2 1s ease-in-out;
  }

  .first-load-p {
    animation: first-load-p 1.5s ease-in-out;
  }
  @keyframes first-load-h2 {
    0%,
    50% {
      opacity: 0;
      transform: translate(0, 30px);
    }
    100% {
      transform: translate(0, 0);
      opacity: 2;
    }
  }
  @keyframes first-load-p {
    0%,
    60% {
      opacity: 0;
      transform: translate(0, 30px);
    }
    100% {
      transform: translate(0, 0);
      opacity: 1;
    }
  }
</style>
